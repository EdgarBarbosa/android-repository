<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalhe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#636363"
    android:padding="8dp"
    tools:context="com.example.edgar.appevento.DetalheActivity">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5"
    android:src="@drawable/video_player"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo:"
            android:textSize="22sp"
            android:layout_marginTop="4sp"
            android:textColor="#636363"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Principais erros e metodo"
            android:textSize="20sp"
            android:textColor="#636363"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data:"
            android:layout_marginTop="4sp"
            android:textSize="22sp"
            android:textColor="#636363"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="26/09/2016"
            android:textSize="20sp"
            android:textColor="#636363"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Acessar video"
            android:layout_marginTop="4sp"
            android:padding="6dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            />
    </LinearLayout>

</LinearLayout>


